{
  "expo": {
    "name": "Olyox",
    "slug": "olyox",
    "version": "1.0.14",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "jsEngine": "jsc",
    "splash": {
      "image": "./assets/appicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.olyoxuser.olyox",
      "usesNotifications": true,
      "development": {
        "distribution": "internal",
        "buildType": "simulator"
      },
      "production": {
        "distribution": "app-store"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Olyox needs your location to show nearby rides, drivers, and services around you, and to auto-fill your address during booking.",
        "NSLocationAlwaysUsageDescription": "Olyox uses your location to help with background location tracking for rides, even when you're not using the app.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Olyox requires location access at all times to provide accurate real-time ride updates.",
        "NSPhotoLibraryUsageDescription": "Olyox uses your photo library to let you upload saved images such as profile photos or vehicle documents.",
        "NSUserTrackingUsageDescription": "This identifier helps us provide a better user experience by analyzing app installs and engagement from advertising campaigns.",
        "LSApplicationQueriesSchemes": ["tel", "mailto", "whatsapp"],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["fb24365702863098853"]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "GMSApiKey": "AIzaSyBvyzqhO8Tq3SvpKLjW7I5RonYAtfOVIn8"
      },
      "googleServicesFile": "./GoogleService-Info.plist",
      "runtimeVersion": "1.0.11"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/appicon.png",
        "backgroundColor": "#ffffff"
      },
      "googleMaps": {
        "apiKey": "AIzaSyBfRHuTByG6CiXtLbyzK_aKNpJfDiB4jUo"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "versionCode": 45,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "package": "com.happy_coding.olyox",
      "googleServicesFile": "./google-services.json",
      "runtimeVersion": "1.0.8"
    },

    "web": {
      "favicon": "./assets/appicon.png",
      "build": {
        "babel": {
          "include": ["react-native-reanimated", "react-native-gesture-handler"]
        },
        "publicPath": "/"
      }
    },

    "extra": {
      "clerkFrontendApi": "pk_test_c2VjdXJlLWdudS0zNi5jbGVyay5hY2NvdW50cy5kZXYk",
      "clerkApiKey": "pk_test_c2VjdXJlLWdudS0zNi5jbGVyay5hY2NvdW50cy5kZXYk",
      "eas": {
        "projectId": "e73c718b-d6aa-45ea-a12a-c496424892ba"
      }
    },

    "plugins": [
      "expo-secure-store",
      "@react-native-firebase/app",
      "expo-notifications",

      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "podfileProperties": {
              "use_modular_headers!": true
            }
          }
        }
      ]
    ],

    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/e73c718b-d6aa-45ea-a12a-c496424892ba"
    },

    "platforms": ["ios", "android", "web"]
