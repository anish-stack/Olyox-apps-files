<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="16dp"
    android:elevation="16dp">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Ride Request"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/close_popup"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#666666"
            android:contentDescription="Close"
            android:padding="4dp" />
    </RelativeLayout>

    <!-- Vehicle Type Badge -->
    <TextView
        android:id="@+id/vehicleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride For Vehicle: Sedan"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#DC143C"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Pickup Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="10dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textSize="16sp"
            android:textColor="#28A745"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICKUP"
                android:textColor="#666666"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/distance_from_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km away"
                android:textColor="#28A745"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Drop Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="10dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="■"
            android:textSize="14sp"
            android:textColor="#DC143C"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DROP"
                android:textColor="#666666"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop Location"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/drop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.8 km total"
                android:textColor="#DC143C"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Price Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FARE"
                android:textColor="#999999"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ride_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.250"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <!-- Decline Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp">

            <TextView
                android:id="@+id/decline_ride"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="DECLINE"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/button_decline_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp" />

            <ProgressBar
                android:id="@+id/decline_loader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#FFFFFF" />
        </FrameLayout>

        <!-- Accept Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/accept_ride"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ACCEPT"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/button_accept_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp" />

            <ProgressBar
                android:id="@+id/accept_loader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#FFFFFF" />
        </FrameLayout>
    </LinearLayout>

    <!-- Auto-decline Timer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-declines in 20 seconds"
        android:textColor="#DC143C"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:textStyle="italic" />

</LinearLayout>